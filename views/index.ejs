<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Event</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="font-awesome.min.css">
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <h1>Event Planner</h1>
  <h2>Event's listed</h2>



  <h3></h3>
  <ul class="messages">
  <% for(var i=0; i<messages.length; i++) {%>
    <li class="message <%= messages[i].color %>">
      <span><%= messages[i].name %></span>
      <span><%= messages[i].msg %></span>
      <span><%= messages[i].thumbUp %></span>
      <span><i class="fa fa-check" aria-hidden="true"></i></span>
      <span><i class="fa fa-pause" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>

  <h2>Add a event below</h2>

  <form action="/messages" method="POST">
    <input type="text" placeholder="Name" name="name">
    <input type="text" placeholder="Date" name="msg">
    <button type="submit">Submit</button>
  </form>

  <script src="main.js"></script>

</body>
</html>
